{
  "name": "screen-manager",
  "version": "1.0.0",
  "description": "An application to manage screen displays and save configurations as profiles.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "lint": "eslint .",
    "build": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Jules",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "electron": "^38.1.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.35.0",
    "globals": "^16.4.0"
  },
  "build": {
    "appId": "com.jules.screenmanager",
    "productName": "Screen Manager",
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "style.css",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "is-elevated": "^4.0.0"
  }
}
